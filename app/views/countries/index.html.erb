<h1>Listing countries</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Continent</th>
    <th>Wikipedia link</th>
    <th>Keywords</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%= country.code %></td>
    <td><%= country.name %></td>
    <td><%= country.continent %></td>
    <td><%= country.wikipedia_link %></td>
    <td><%= country.keywords %></td>
    <td><%= link_to 'Show', country %></td>
    <td><%= link_to 'Edit', edit_country_path(country) %></td>
    <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

